!!! HTML
%html
  %head
    %title Commit
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    %nav#commit-nav.navbar.navbar-default
      %div.navbar-header
      %button.navbar-toggle( type="button"
        class="navbar-toggle"
        data-toggle="collapse"
        data-target="#commit-navbar" )
        %span.sr-only Toggle Navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar

      %a.navbar-brand{ :href => "#" }
        %strong Commit

      %div#commit-navbar.navbar-collapse.collapse
        %ul.nav.navbar-nav.pull-right
          - if !logged_in?
            %li#sign-in
              %a{ :href => new_session_url } Sign In
            %li#sign-up
              %a{ :href => new_user_url } Sign Up
          - else
            %li#user-info
              %a
                = "Hello, #{ current_user.username }"
            %li#sign-out
              = link_to "Sign Out", session_url, :method => :delete

    = yield
